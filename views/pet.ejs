<%- include('partials/boilerplate.ejs') %>
<%- include('partials/loggedinnav.ejs') %>
<nav>
    <ul><a href=""></a></ul>
</nav>
<main>
    <form action="/dashboard/delete/<%= pet.id %>" method="post">
        <button>Delete pet</button>
    </form>
    
    <section class="pet">
        <div class="pet__img">
            <img src="" alt="">
        </div>

        <div class="pet__text">
            <h3>Name : <%= pet.name %>  </h3> <span>gender <%= pet.gender %> </span>
            <p>Age: <%= showDate(pet.birthday) %> </p>
            <p>Microchip no: <%= pet.microshipNr %> </p>
            <p>Breed: <%= pet.breed %> </p>
        </div>
    </section>

    <section class="pet document">
        <div class="document__header">
            <h3>Documents</h3>
            <i>plus icon</i>
            <a href="">Show all</a>
        </div>
        <div class="document__items">
            <p>  <i>icon</i> <a href="">The item</a></p>
        </div>
    </section>

    <section class="pet appoinment">


    </section>

    <section class="pet weight">
        <div class="weight__header">
            <h3>weight</h3>
            <span>plus icon</span>
        </div>
    </section>

    <section class="pet advice">
        <div>
            <h3>Advice</h3>
        </div>
    </section>
</main>


