<%- include('partials/header.ejs') %>
<%- include('partials/loggedinnav.ejs') %>


<div class="pet__container">
    <div class="pet">
        <nav>
            <ul>
                <% allPets.forEach(petx => { %> 
                    <li><a class="pet-link <%= isActive(pet, petx) %>" href="/dashboard/pet/<%= petx.id %>"><%= petx.name %> </a></li>
                <% }) %>  
                
            </ul>
            <form action="/dashboard/delete/<%= pet.id %>" method="post">
                <button>Delete pet</button>
            </form>
            <a href="/dashboard/edit/<%= pet.id %>">Edit</a>
        </nav>

        <main> 
            <div class="pet__main">
                <section class="pet info">
                    <div class="top">
                        <div class="info__img">
                            <img src="img/saayapic.jpeg" alt="">
                        </div>
                        <a class="dots" href="">
                            <img src="img/dots.png" alt="">
                        </a>
                    </div>

                    <div class="info__text">
                        <h3><%= pet.name %> <i class="<%= getGenderIcon(pet.gender) %>" style="font-size:24px"></i></h3> 
                        <p>Birthday: <%= showDate(pet.birthday) %> </p>
                        <p>Ship NR:<%= pet.microshipNr %> </p>
                        <p>Breed: <%= pet.breed %> </p>
                        <p>Status: <%= pet.status %> </p>
                        <p>Neutered: <%= pet.neutered  %> </p>
                    </div>
                </section>

                <section class="pet document">
                    <div class="document__header top">
                        <h3>Documents</h3>
                        <div>
                            <a href=""><img src="img/plus.png" alt=""></a>
                            <a class="document__header__button" href="">Show all</a>
                        </div>
                        
                    </div>
                    <div class="document__items">
                        <p>  <i>icon</i> <a href="">The item</a></p>
                    </div>
                </section>

                <section class="pet appointment">
                    <div class="top">
                        <h3>Appointments</h3>
                        <a class="dots" href="">
                            <img src="img/dots.png" alt="">
                        </a>
                    </div>
                </section>
            </div>
            
       
                <section class="pet weight">
                    <div class="weight__header">
                        <h3>weight</h3>
                        <div>
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </section>

        </main>
    </div>
</div>

<script src="/script.js"></script>
<%- include('partials/footer.ejs') %>