<%- include('partials/boilerplate.ejs') %>
<%- include('partials/loggedinnav.ejs') %>

<main>
    <form action="/addpet" method="post">
        <div>
            <div>
                <div>
                    <label for="">Name</label> 
                    <input type="text" placeholder="" name="" id="" required> 
                </div>
                <div>
                    <input type="radio" id="" name="gender" value="male">
                    <label for="male">Male</label>
                    
                    <input type="radio" id="" name="gender" value="female">
                    <label for="female">Female</label>
                </div>
                <div>
                    <label for="age">Birthday</label> 
                    <input type="date" id="" name="age" value="" min="" max="">
                </div>
                <div>
                    <input type="radio" id="" name="sprayedorneutered" value="no">
                    <label for="male">No</label>
                    
                    <input type="radio" id="" name="sprayedorneutered" value="yes">
                    <label for="female">Yes</label>
                </div>
                <div>
                    <label for="">Microchip number</label> 
                    <input type="number" id="" name="" value="" min="" max="">
                </div>
                <div>
                    <div>
                        <label for="">Breed</label> 
                        <input type="text" placeholder="" name="" id=""> 
                    </div>
                    <div>
                        <label for="pet-select">Type of animal</label>
                        <select id="pet-select">
                            <option value="">Select</option>
                            <option value="dog">Dog</option>
                            <option value="cat">Cat</option>
                            <option value="rabbit">Rabbit</option>
                            <option value="hamster">Hamster</option>
                            <option value="parrot">Reptile</option>
                            <option value="spider">Bird</option>
                            <option value="goldfish">other</option>
                        </select>
                    </div>
                    <div>
                        <label for="status">Status</label>
                        <select id="status">
                            <option value="normal">Normal</option>
                            <option value="passed-away">Passed away</option>
                            <option value="missing">Missing</option>
                            <option value="sold">Sold</option>
                            <option value="unknown">Unknown</option>
                         
                        </select>
                    </div>


                </div>

            </div>
            <div class="login__button">
                <button>Save</button>   
            </div>

        </div>
        
    </form>
</main>
<%- include('partials/footer.ejs') %>