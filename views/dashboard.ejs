<%- include('partials/boilerplate.ejs') %>
<%- include('partials/loggedinnav.ejs') %>

<main class="dashboard">
    <section class="dashboard__item">
        <div class="dashboard__text">
            <h2>Messages</h2>
        </div> 
    </section>

    <section class="dashboard__item">
        <div class="dashboard__text">
            <h2>Pets</h2>
            <% if (pets != false) { %> 
                <% pets.forEach(pet => { %>
                    <div class="dashboard__petCard">
                        <h4><%= pet.name %> </h4>
                        <i class="<%= getGenderIcon(pet.gender) %>" style="font-size:24px"></i>
                        <p>ID : <%= pet.microshipNr || "None" %> </p>
                        <a href="/dashboard/pet/<%= pet.id %>">Details</a>
                    </div>
            <%  }); 
            } else { %> 
            <p>You haven't added any pets yet</p>
            <% } %>
            <div class="dashboard__button button">
                <a  href="/dashboard/addpet">Add pet</a>
            </div>
            
        </div>
    </section>
</main>
<%- include('partials/footer.ejs') %>